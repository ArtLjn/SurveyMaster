<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.practice.surveymaster.mapper.OptionMapper">

    <!-- 选项结果映射 -->
    <resultMap id="OptionResultMap" type="org.practice.surveymaster.model.OptionTable">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="question_id" property="questionId" jdbcType="BIGINT"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 基础列名 -->
    <sql id="Base_Column_List">
        id, question_id, content
    </sql>

    <!-- 插入选项 -->
    <insert id="insert" parameterType="org.practice.surveymaster.model.OptionTable" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO option_table (question_id, content)
        VALUES (#{questionId}, #{content})
    </insert>

    <!-- 根据ID查询选项 -->
    <select id="selectById" parameterType="long" resultMap="OptionResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM option_table
        WHERE id = #{id}
    </select>

    <!-- 根据问题ID查询所有选项 -->
    <select id="selectByQuestionId" parameterType="long" resultMap="OptionResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM option_table
        WHERE question_id = #{questionId}
        ORDER BY id ASC
    </select>

    <!-- 批量插入选项 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO option_table (question_id, content)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.questionId}, #{item.content})
        </foreach>
    </insert>

    <!-- 更新选项 -->
    <update id="update" parameterType="org.practice.surveymaster.model.OptionTable">
        UPDATE option_table
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除选项 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM option_table WHERE id = #{id}
    </delete>

    <!-- 根据问题ID删除所有选项 -->
    <delete id="deleteByQuestionId" parameterType="long">
        DELETE FROM option_table WHERE question_id = #{questionId}
    </delete>

</mapper>